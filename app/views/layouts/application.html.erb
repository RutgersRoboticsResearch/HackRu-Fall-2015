<!DOCTYPE html>
<html>
<head>
  <title>HackRU | Fall 2015</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= favicon_link_tag 'favicon.png' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <!--NAV BEGIN -->
  <nav id = "nav">
    <div id = "nav_center">
      <div id="hackru_penguin"><%= link_to image_tag("hack_ru_logo.png", :class => 'home_btn'), homes_path%></div>
        <%= link_to "about", homes_path(@home, :anchor => "about"), {:class=>"nav_text"}%>
        <%= link_to "faq", homes_path(@home, :anchor => "faq"), {:id => 'faq_link', :class => 'nav_text'}%>
        <%= link_to "faq", homes_path(@home, :anchor => "faq_mobile"), {:id => 'faq_mobile_link', :class => 'nav_text'}%>
        <%= link_to "sponsors", homes_path(@home, :anchor => "sponsors"), {:class => 'nav_text'}%>
        <%= link_to "schedule", homes_path(@home, :anchor => "schedule"), {:class => 'nav_text'}%>
        <%= link_to "team", homes_path(@home, :anchor => "team"), {:class => 'nav_text'}%>
        <%= link_to "location", "https://www.google.com/maps/place/Rutgers+College+Avenue+Student+Center/@40.5027331,-74.4520898,15z/data=!4m2!3m1!1s0x0:0x8820e7c83ea74250", {:class => 'nav_text', :target => "_blank"}%>
    </div>

    <ul id="signup">
      <% if user_signed_in? %>
        <%= link_to "Profile", edit_user_registration_path, class: 'registerBtn2 registerBtn-2'%>
        <%= link_to "Log Out", logout_path, class: 'registerBtn2 registerBtn-2' %>
      <% else %>
        <%= link_to "Sign up", register_path, class: 'registerBtn2 registerBtn-2' %>
        <%= link_to "Sign in", login_path, class: 'registerBtn2 registerBtn-2'%>
      <% end %>
    </ul>

  <div class="container_flash">
    <%= render_breadcrumbs %>
    <%flash.each do |type, message|%>
    <div class="alert <%= flash_class type %>">
      <%= message %>
      <button class="close" data-dismiss="alert">x</button>
    </div>
    <% end %>
  </div>
  </nav>

  <%= yield %>
  <!--FOOTER BEGIN -->
  <footer id="footer">
    <div id="footerTop">
      <div class="footerDetails">
        <img id="usacs_logo" src= "/assets/usacs.png"/>
        <img id="mlh_footer_logo" src= "/assets/mlh-logo-white.png"/>
      </div>
    </div>
   <div id = "footerBottom">
      <div class="footerDetails2">
        <a target="_blank" href="https://www.facebook.com/theHackRU" ><img id="fb_logo" src= "/assets/FB-f-Logo__blue_72.png"/></a>
        <a target="_blank" href="https://twitter.com/thehackru" ><img id="twitter_logo" src= "/assets/Twitter_logo_white_small.png"/></a>
        <a target="_blank" href="https://instagram.com/thehackru" ><img id="fb_logo" src= "/assets/instagram.png"/></a>
      </div>
    </div>
  </footer>
  <!-- FOOTER END -->
</body>
<script id="activities-template" type="text/x-handlebars-template">
<a class="dropdown-toggle" href='#'>Activity Feed({{count}})</a>
<ul class="dropdown-menu">
{{#each activities}}
{{activityLink}}
{{/each}}
<li class="divider"></li>
<li><a href="{{activityFeedLink}}">Activity Feed</a></li>
</ul>
</script>

</html>

