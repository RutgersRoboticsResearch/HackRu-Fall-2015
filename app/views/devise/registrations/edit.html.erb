<section id="wrapper">
  <div style="width:100%; text-align: center;">
    <h1 class="main">
      <%= link_to image_tag("hack_ru_logo.png", :class=> 'banner'), homes_path%>
    </h1>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal '}) do |f| %>
    <%= devise_error_messages! %>
    <fieldset>
      <legend>Communication</legend>
      <%= link_to "HackRU Feed", feed_path, class: 'registerBtn2 registerBtn-1' %>
      <%= link_to 'Friends', user_friendships_path, class: 'registerBtn2 registerBtn-1' %>
      <%= link_to 'Albums', albums_path(current_user), class: 'registerBtn2 registerBtn-1' %>
    </fieldset>
    <h1>Edit My Profile</h1>
    <fieldset>
      <legend>Profile Avatar</legend>
      <%= bootstrap_paperclip_picture f, :avatar %>
      <hr/>
      <%= f.input :avatar, as: :file, input_html: {id: "upfile"} %>
    </fieldset>
    <fieldset>
      <legend>Resume</legend>
      <%= f.input :resume, as: :file, input_html: {id: "upfile"}  %>
      <%= user_resume_link @user%>
      <hr/>
    </fieldset>
    <fieldset>
      <legend>About Me</legend>
      <%= f.input :first_name, input_html: { class: 'form-input', id: "name"} %>
      <%= f.input :last_name, input_html: { class: 'form-input', id: "name"} %>
      <%= f.input :school_name, input_html: { class: 'form-input', id:"school"} %>
      <%= f.input :email, input_html: { class: 'form-input', id:"email"} %>
      <%= f.input :diet, input_html: { class: 'form-input', id:"diet"} %>
      <%= f.input :git_account, input_html: { class: 'form-input', id:"github"} %>
    </fieldset>



    <fieldset>
      <legend>Update Password</legend>
      <%= f.input :password, input_html: { class: 'form-input', id:"name", placeholder:"Enter your new password", autocomplete: 'off' } %>
      <p class = "red_p">Leave blank if you don't want to change it</p>
      <%= f.input :password_confirmation, input_html: { class: 'form-input', id:"name", placeholder:"Re-Enter your new password", autocomplete: 'off' } %>
    </fieldset>

    <fieldset>
      <legend>Confirm Changes</legend>
      <%= f.input :current_password, input_html: { class: 'form-input', id:"name", placeholder:"Enter your current password", autocomplete: 'off' } %>
      <p class ="red_p">We need your current password to confirm your changes</p>
    </fieldset>

    <div class="form-actions">
      <%= f.submit "Update", class: 'registerBtn registerBtn-1'%>
      <%= link_to "Back", root_path, class: 'btn' %>
      <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn btn-danger pull-right' %>
    </div>
    <% end %>
  </section>
</div>
