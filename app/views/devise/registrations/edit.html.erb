<section id="wrapper">
  <div style="width:100%; text-align: center;">
    <h1 class="main">
      <%= link_to image_tag("hack_ru_logo.png", :class=> 'banner'), homes_path%>
    </h1>
<%= page_header do %>
  <h2>Edit My Profile</h2>
<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal '}) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>About Me</legend>
          <%= f.input :first_name, input_html: { class: 'form-input', id: "name",type:"text", name: "username" ,placeholder: "What is your full name?"} %>
          <%= f.input :school_name, input_html: { class: 'form-input', id:"email", type:"email", name:"email", placeholder:"What school do you attend?"} %>
          <%= f.input :email, input_html: { class: 'form-input', id:"email", type:"email", name:"email", placeholder:"Enter your email"} %>
          <%= f.input :diet, input_html: { class: 'form-input', id:"email", type:"email", name:"email", placeholder:"Do you have any dietary restrictions?"} %>
          <%= f.input :git_account, input_html: { class: 'form-input', id:"email", type:"email", name:"email", placeholder:"Enter your GitHub handle"} %>
  </fieldset>

  <fieldset>
    <legend>Resume</legend>
    <%= f.input :avatar, input_html: {hidden: true}, as: :file %>
  </fieldset>

  <fieldset>
    <legend>Update Password</legend>
    <%= f.input :password, hint: "Leave blank if you don't want to change it", input_html: { class: 'form-input', id:"name", placeholder:"Enter your new password", autocomplete: 'off' } %>
    <%= f.input :password_confirmation, input_html: { class: 'form-input', id:"name", placeholder:"Re-Enter your new password", autocomplete: 'off' } %>
  </fieldset>

  <fieldset>
    <legend>Confirm Changes</legend>
    <%= f.input :current_password, hint: "We need your current password to confirm your changes", input_html: { class: 'form-input', id:"name", placeholder:"Enter your current password", autocomplete: 'off' } %>
  </fieldset>

  <div class="form-actions">
    <%= f.submit "Update", class: 'btn btn-primary' %>
    <%= link_to "Back", root_path, class: 'btn' %>
    <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: 'btn btn-danger pull-right' %>
  </div>
<% end %>
</section>
</div>
